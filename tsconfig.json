{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"moduleResolution": "node"
	},
	"include": ["src/**/*.ts", "src/types.ts"],
	"exclude": ["node_modules"]
}
